
<section class="<%= currentUser ? "trigger" : "" %>">
  <h4 class="title"><%= experience.escape("institution") %></h4>
  <h5 class="school">
    <%= experience.escape("role") === "High School" ? "" : experience.escape("role") %>
    <% if (experience.escape("field") !== "") { %>
      <span class="major"><%= experience.escape("field") %></span>
    <% } %>
  </h5>



  <div class="date-location">
    <span class="date-text"><%= experience.escape("date_string") %></span>
  </div>

  <% if (experience.escape("description") !== "") { %>
    <span class="field-text"><%= experience.escape("description") %></span>
  <% } %>

  <% if (currentUser) { %>
    <% if (experience.escape("field") === "") { %>
      <a class="edit-form" href="javascript:void(0)">Add Field of Study</a>
      <br>
    <% } %>
    <% if (experience.escape("description") === "") { %>
      <a class="edit-form" href="javascript:void(0)">Add Description</a>
      <br>
    <% } %>
  <% } %>




</section>
<% if (currentUser) { %>
  <%= JST["schools/form-partial"]({school: experience}) %>
<%  } %>

<form>
  <ul class="errors"></ul>

  <label for="">Title: </label>
  <input type="text" name="experience[role]" value="<%= job.escape("role") %>">
  <br>

  <label for="">Company: </label>
  <input type="text" name="experience[institution]" value="<%= job.escape("institution") %>">
  <br>

  <label for="">Location: </label>
  <input type="text" name="experience[location]" value="<%= job.escape("location") %>">
  <br>

  <label for="">Time Period: </label>
  <input type="date" name="experience[start_date]" value="<%= job.escape("start_date") %>">
    -
  <input type="date" name="experience[end_date]" value="<%= job.escape("end_date") %>">
  <br>

  <input id="check-present" type="checkbox" name="some_name" value="">
  <label for="check-present">I currently work here</label>
  <br>
  
  <label for="">Description: </label>
  <textarea name="experience[description]"><%= job.escape("location") %></textarea>
  <br>

  <button>Submit</button>
  <a href="javascript:void(0)" class="cancel">Cancel</a>
  <% if (!job.isNew()) { %>
    <a href="javascript:void(0)" class="delete">Remove this position</a>
  <% } %>
</form>

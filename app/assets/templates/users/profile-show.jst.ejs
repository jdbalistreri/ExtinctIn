
<img class="profile-picture" src="<%= user.escape("profile_picture_url") %>" alt="Profile Picture" />

<section class="profile-info">

  <span class="full-name"><%= user.escape("full_name")  %></span>
  <p class="title"><%= user.escape("tagline") %></p>
  <span class="location"><%= user.escape("location") %></span>
  <span class="industry"><%= user.escape("industry") %></span>

  <table class="user-overview">
    <tr>
      <th> Current </th>
      <td> Fill this in </td>
    </tr>
    <tr>
      <th> Previous </th>
      <td> Fill this in </td>
    </tr>
    <tr>
      <th> Education </th>
      <td> Fill this in </td>
    </tr>
  </table>

  <div class="profile-bottom group">
    <div class="button-holder">

    </div>

    <span class="connections">
      <strong><%= user.escape("num_connections") %></strong>
      connections
    </span>
  </div>
</section>

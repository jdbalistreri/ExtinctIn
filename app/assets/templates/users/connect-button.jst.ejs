
<% if (cu_connection.isNew()) { %>
  <button class="request-connection">Connect</button>

<% } else if (cu_connection.escape("status") === "approved") { %>
  <button class="message-user">Send a message</button>

<% } else if (parseInt(cu_connection.get("receiver_id")) === user.id) { %>
  <button class="delete-this">Connection Sent</button>

<% } else if (cu_connection.escape("status") === "pending") { %>
  <button class="approve-connection">Approve</button>
  <button class="deny-connection">Deny</button>

<% } else { %>
  <button class="approve-connection">Connect</button>
<% } %>
